<!-- app/views/registros_acao/index.html.erb -->
<h1>Registros de Ação</h1>

<table>
  <thead>
    <tr>
      <th>Ação ID</th>
      <th>Data Execução</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @registros_acao.each do |registro| %>
      <tr>
        <td><%= registro.acao_id %></td>
        <td><%= registro.data_execucao %></td>
        <td><%= link_to 'Show', registro %></td>
        <td><%= link_to 'Edit', edit_registro_acao_path(registro) %></td>
        <td><%= link_to 'Destroy', registro, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Registro de Ação', new_registro_acao_path %>
