<%= form_with(model: @pessoa, local: true, class: "space-y-4") do |f| %>
  <div>
    <label class="block text-gray-700 font-medium">Nome</label>
    <%= f.text_field :nome, class: "w-full p-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 shadow-sm" %>
  </div>

  <div>
    <label class="block text-gray-700 font-medium">Email</label>
    <%= f.email_field :email, class: "w-full p-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 shadow-sm" %>
  </div>

  <div>
    <label class="block text-gray-700 font-medium">Data de Nascimento</label>
    <%= f.date_field :data_nascimento, class: "w-full p-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 shadow-sm" %>
  </div>

  <div>
    <label class="block text-gray-700 font-medium">Sexo</label>
    <%= f.select :sexo, [['Masculino', 'M'], ['Feminino', 'F']], {}, class: "w-full p-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 shadow-sm" %>
  </div>

  <div class="flex justify-end">
    <%= f.submit "Create Pessoa", class: "px-6 py-2 bg-green-600 text-white rounded-lg font-semibold shadow-md hover:bg-green-700 transition duration-300" %>
  </div>
<% end %>
