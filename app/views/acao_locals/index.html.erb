<!-- app/views/acao_locals/index.html.erb -->
<h1>Ações Locais</h1>

<table>
  <thead>
    <tr>
      <th>Ação ID</th>
      <th>Local ID</th>
      <th>Disponibilidade</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @acao_locals.each do |al| %>
      <tr>
        <td><%= al.acao_id %></td>
        <td><%= al.local_id %></td>
        <td><%= al.disponibilidade ? 'Sim' : 'Não' %></td>
        <td><%= link_to 'Show', al %></td>
        <td><%= link_to 'Edit', edit_acao_local_path(al) %></td>
        <td><%= link_to 'Destroy', al, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Ação Local', new_acao_local_path %>
