<!-- app/views/premios/index.html.erb -->
<h1>Prêmios</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Custo Pontos</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @premios.each do |premio| %>
      <tr>
        <td><%= premio.nome %></td>
        <td><%= premio.custo_pontos %></td>
        <td><%= link_to 'Show', premio %></td>
        <td><%= link_to 'Edit', edit_premio_path(premio) %></td>
        <td><%= link_to 'Destroy', premio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Prêmio', new_premio_path %>
