<!-- app/views/historico_acao/index.html.erb -->
<h1 class="text-2xl font-bold mb-4">Histórico de Ação</h1>

<table>
  <thead>
    <tr>
      <th>Pessoa</th>
      <th>Ação</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @historico_acao.each do |historico| %>
      <tr>
        <td><%= historico.pessoa.nome %></td>
        <td><%= historico.acao.descricao %></td>
        <td><%= link_to 'Show', historico %></td>
        <td><%= link_to 'Edit', edit_historico_acao_path(historico) %></td>
        <td><%= link_to 'Destroy', historico, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Histórico de Ação', new_historico_acao_path, class: "btn btn-new mt-4 inline-block" %>
