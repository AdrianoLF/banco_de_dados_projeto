<!-- app/views/pontuacao_pessoas/index.html.erb -->
<h1>Pontuação Pessoa</h1>

<table>
  <thead>
    <tr>
      <th>Pessoa ID</th>
      <th>Pontuação Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @pontuacao_pessoas.each do |pontuacao| %>
      <tr>
        <td><%= pontuacao.pessoa_id %></td>
        <td><%= pontuacao.pontuacao_total %></td>
        <td><%= link_to 'Show', pontuacao %></td>
        <td><%= link_to 'Edit', edit_pontuacao_pessoa_path(pontuacao) %></td>
        <td><%= link_to 'Destroy', pontuacao, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Pontuação Pessoa', new_pontuacao_pessoa_path %>
